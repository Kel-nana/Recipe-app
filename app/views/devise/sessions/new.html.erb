<h2 class = "sign_up">Log in</h2>
<div class = "bg-image">
<div id = "bg-position">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "input_label  email_label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "input_label log-in-btn" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input_field"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,class: "check_box_label" %>
    </div>
  <% end %>

  <div class="actions log-in-btn">
    <%= f.submit "Log in", id: "login-btn" %>
  </div>
<% end %>
</div>
</div>

<%= render "devise/shared/links" %>
