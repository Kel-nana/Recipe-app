<div class='food-table-container'>
  <div class="add-food-btn-container">
    <%= link_to "Add food", new_user_food_path, class: 'add-food-btn' %>
  </div>

  <% if @foods.empty? %>
    <p>No foods available!!</p>
  <% else %>
    <table>
      <tr class="table-header-row">
        <th>Foods</th>
        <th>Measurement unit</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
      <tbody>
        <% @foods.each do |food| %>
            <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= food.quantity %></td>
            <td>$<%= food.price %></td>
            <td>
              <%= button_to 'Delete', user_food_path(food.user, food), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>      
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
