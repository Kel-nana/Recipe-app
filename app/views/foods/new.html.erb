<h1>New Form for Food</h1>

<% if @food.errors.any? %>
  <div class="post-errors-box">
    <p><%= pluralize(@food.errors.count, "error") %> found:</p>

    <ul class="food-errors-ul">
      <% @food.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @food, url: new_food_path, method: :post) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <br>
  <%= form.label :measurement_unit %>
  <%= form.text_field :measurement_unit %>
  <br>
  <%= form.label :price %>
  <%= form.text_field :price %>
  <br>
  <%= form.label :quantity %>
  <%= form.number_field :quantity %>
  <br>
  <%= form.submit %>
<% end %>
